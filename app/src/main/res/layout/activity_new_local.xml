<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.ufc.caps.activity.NewLocalActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/nomeLocal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Digite o nome desse aviso aqui"
                android:maxLength="50"
                android:paddingBottom="6dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#000000"
                android:paddingTop="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="4dp"
                android:text="Horário"
                android:textColor="#000000"
                android:textSize="25dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dia Todo:" />

                    <Switch
                        android:id="@+id/diaTodo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Início" />

                    <TextView
                        android:id="@+id/horarioInicial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="00:00" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fim" />

                    <TextView
                        android:id="@+id/horarioFinal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="00:00" />
                </TableRow>
            </TableLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#000000"
                android:paddingTop="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="4dp"
                android:text="Local"
                android:textColor="#000000"
                android:textSize="25dp" />

            <Button
                android:id="@+id/botaoEscolherLugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Escolher Local" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#000000"
                android:paddingTop="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="4dp"
                android:text="Recado"
                android:textColor="#000000"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/textoRecado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Digite aqui o que gostará de ser lembrado..."
                android:lines="4"
                android:maxLength="140" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#000000"
                android:paddingTop="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="4dp"
                android:text="Forma"
                android:textColor="#000000"
                android:textSize="25dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioAlarme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alarme" />

                <RadioButton
                    android:id="@+id/radioNotificacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notificaçao" />
            </RadioGroup>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

